{{ 'section-content-image.css' |  asset_url |  stylesheet_tag }}

<div class="content-image content-image--{{ section.settings.alignment }}">
    <div class="page-width">
        <div class="content-image__image bg-cover{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            <img src="{{ section.settings.image | img_url: '925x645' }}" alt="{{ section.settings.title }}">
        </div>
        <div class="content-image__content{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            <div class="content-image__inner">
                <h2 class="content-image__title t-h3">{{ section.settings.title }}</h2>
                <div class="content-image__copy">
                    {{ section.settings.content }}
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Content Image",
    "tag": "section",
    "class": "section-content-image",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content"
        },
        {
            "type": "select",
            "id": "alignment",
            "label": "Alignment",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Content Image"
        }
    ]
}
{% endschema %}