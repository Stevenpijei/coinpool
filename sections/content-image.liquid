            "options": [
                {
                    "value": "top",
                    "label": "Top"
                },
                {
                    "value": "center",
                    "label": "Center"
                }
            ]
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Background Color"
        }
    ],
    "presets": [
        {
            "name": "Content Image"
        }
    ]
}
{% endschema %}