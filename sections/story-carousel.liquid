{{ 'section-story-carousel.css' |  asset_url |  stylesheet_tag }}

<div class="story-carousel{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- if section.settings.title -%}
        <h2 class="story-carousel__title t-h2">{{ section.settings.title }}</h2>
    {%- endif -%}
    <div class="story-carousel__carousel">
        <div class="story-carousel__carousel__container">
            {% for block in section.blocks %}
                <div class="story-carousel__item">
                    {%- if block.settings.image -%}
                        <div class="story-carousel__item__image bg-cover">
                            <img src="{{ block.settings.image | img_url: '530x605' }}" alt="">
                        </div>
                    {%- endif -%}
                    <div class="story-carousel__item__content">
                        {{ block.settings.content }}
                        {% if section.settings.button_link and section.settings.button_text %}
                            <a href="{{ section.settings.button_link }}" class="btn btn--primary">{{ section.settings.button_text }}</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="story-carousel__prev" onClick="moveImagePrev()">Prev</div>
    <div class="story-carousel__next" onClick="moveImageNext()">Next</div>
</div>

<script>
    gsap.registerPlugin(ScrollTrigger);

    ScrollTrigger.create({
    trigger: ".story-carousel-section",
    start: "center center",
    end: () => "+=" + container.scrollWidth,
    onToggle: self => {
        if (!self.isActive) {
        const scrollX = window.scrollX;
        localStorage.setItem("scrollXPosition", scrollX);
        }
    }
    });

    // Restore the scroll position when the page loads
    window.onload = function () {
    const savedScrollX = localStorage.getItem("scrollXPosition");
    if (savedScrollX) {
        window.scrollTo(savedScrollX, 0);
    }
    };

    // Update the scroll position when using previous/next buttons
    function moveImagePrev() {
    const distanceToMove = document.querySelector('.story-carousel__item').offsetWidth;
    const currentScrollX = window.scrollX;
    const newScrollX = Math.max(0, currentScrollX - distanceToMove);
    window.scrollTo(newScrollX, 0);
    }

    function moveImageNext() {
    const distanceToMove = document.querySelector('.story-carousel__item').offsetWidth;
    const currentScrollX = window.scrollX;
    const maxScrollX = document.querySelector(".story-carousel__carousel__container").scrollWidth - document.documentElement.clientWidth;
    const newScrollX = Math.min(maxScrollX, currentScrollX + distanceToMove);
    window.scrollTo(newScrollX, 0);
    }
</script>

{% schema %}
{
    "name": "Story Carousel",
    "tag": "section",
    "class": "story-carousel-section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Our Story"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Find Out More"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        }
    ],
    "blocks": [
        {
            "type": "story",
            "name": "Story",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "content"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Story Carousel",
            "blocks": [
                {
                    "type": "story"
                }
            ]
        }
    ]
}
{% endschema %}